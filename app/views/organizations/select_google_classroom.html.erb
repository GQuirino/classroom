<div class="container-lg p-responsive">
  <div class="Subhead Subhead--spacious">
    <div class="Subhead-heading">Select a Google Classroom</div>
  </div>
  <div class="my-3">
    <%= form_tag search_google_classroom_organization_path, id: 'js-search-form', class: 'form-block col-md-4 py-2', method: :get, remote: true do %>
      <%= text_field_tag :query, params[:query], class: 'form-control width-full', placeholder: 'Search Google Classrooms...', autofocus: true, autocomplete: :off %>
    <% end %>

    <div class="mt-2" id="js-search-results">
      <%= render partial: 'google_classroom_collection', locals: {courses: @google_classroom_courses} %>
    </div>
  </div>
</div> 
