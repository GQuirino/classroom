<%= form_for current_organization, url: { action: :setup_organization } do |f| %>
  <div class="Box overflow-scroll">
    <ul>
      <% courses.each_with_index do |course, i| %>
        <li class="Box-row">
          <label>
            <%= radio_button_tag "google_course_id", course.id, i==0, 'aria-describedby':"help-text-for-checkbox", class:"mr-2" %>
            <%= course.name %>
          </label>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="d-flex flex-items-center border-top pt-5">
    <%= f.submit 'Link classroom', class: 'btn btn-primary mr-3' %>
    <%= link_to 'Go back', setup_organization_path(current_organization), class: 'btn-link' %>
  </div>
<% end %>
